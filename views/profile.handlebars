<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a New Book:</h3>

    <form class="form new-book-form">
      <div class="form-group">
        <label for="book-title">book title:</label>
        <input class="form-input" type="text" id="book-title" name="book-title" />
      </div>
      <div class="form-group">
        <label for="book-comment">comment:</label>
        <textarea class="form-input" id="book-comment" name="book-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add your Comment!</button>
      </div>
    </form>
  </div>

  {{#if books.length}}
  <div class="col-md-6 book-list">
    <h3>Current books:</h3>

    {{#each books as |book|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/book/{{book.id}}">{{book.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{book.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>