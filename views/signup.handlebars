<!-- Image Logo -->
<div class="tile is-vertical is-parent is-centered">
  <img id="login-image" src="/images/Logo/logo_transparent.png" style="border-radius: 10px; height: 220px; width: 220px;">
  <div class="tile is-child box has-text-centered">
    <!-- Sign up input -->
    <p class="title">Sign up</p>
    <div class="field signup-form">
      <div class="control has-icons-left has-icons-right">
        <input class="input" type="text" id="name-signup" placeholder="Full Name">
      </div>
    </div>
    <div class="field">
      <div class="control has-icons-left has-icons-right">
        <input class="input" type="email" id="email-signup" placeholder="Email">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-exclamation-triangle"></i>
        </span>
      </div>
      <!-- <p class="help is-danger">This email is invalid</p> -->
    </div>
    <div class="field">
      <div class="control has-icons-left has-icons-right">
        <input class="input" type="password" id="password-signup" placeholder="Password">
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
      <!-- <p class="help is-success">Password</p> -->
    </div>
    <div class="field">
      <div class="form-group">
        <button id="signup-button" class="button is-light" type="submit">Sign Up</button>
      </div>
    </div>
  </div>
</div>

<!-- JS Script for Sign Up -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  const signupFormHandler = async (event) => {
    event.preventDefault();

    const name = document.querySelector('#name-signup').value.trim();
    const email = document.querySelector('#email-signup').value.trim();
    const password = document.querySelector('#password-signup').value.trim();

    if (name && email && password) {
      const response = await fetch('/api/users', {
        method: 'POST',
        body: JSON.stringify({ name, email, password }),
        headers: { 'Content-Type': 'application/json' },
      });

      if (response.ok) {
        document.location.replace('/profile');
      } else {
        alert('Failed to create user');
      }
    }
  };

  document.querySelector('#signup-button').addEventListener('click', signupFormHandler);
});
</script>
